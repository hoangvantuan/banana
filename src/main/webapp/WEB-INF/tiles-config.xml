<tiles-definitions>
	<!--  DEFAULT LAYOUT-->
	<definition name="baseLayout" template="/WEB-INF/views/tiles/default-layout.jsp">
		<put-attribute name="title" value=""></put-attribute>
		<put-attribute name="head" value="/WEB-INF/views/tiles/default-head.jsp" />
		<put-attribute name="navigation" value="/WEB-INF/views/tiles/default-navigation.jsp" />
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/tiles/default-footer.jsp" />
	</definition>

	<!-- LOGIN -->
	<definition name="login" extends="baseLayout">
		<put-attribute name="title" value="banana.login.page.title"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/pages/login.jsp" />
	</definition>

	<!-- HOME PAGE -->
	<definition name="homepage" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/views/pages/home.jsp" />
	</definition>



